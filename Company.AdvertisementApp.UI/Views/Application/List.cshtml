@model List<AdvertisementListDto>

@{
    Layout = "_Layout";
}

<div class="container-fluid">
    @{
        if (Model?.Count > 0)
        {
            <div class="text-end my-3 py-1">
                <a asp-action="Create" asp-controller="Application">New advert create</a>
            </div>

            <table class="mt-4 table table-sm table-hover table-striped">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Created Date</th>
                    <th>Status</th>
                    <th>Edit</th>
                </tr>
                </thead>
                <tbody>

                @foreach (var advertisement in Model)
                {
                    <tr>
                        <td>@advertisement.Title</td>
                        <td>@advertisement.CreatedDate.ToString("dddd, dd MMMM yyyy")</td>
                        <td>@(advertisement.Status?"Active":"Passive")</td>
                        <td>
                            <a asp-action="Update" asp-controller="Application" asp-route-Id="@advertisement.Id">Update</a> |
                            <a asp-action="Remove" asp-controller="Application" asp-route-Id="@advertisement.Id">Delete</a>
                        </td>
                    </tr>
                }

                </tbody>
            </table>
        }
        else
        {
            <div class="text-end my-3 py-1">
                <a asp-action="Create" asp-controller="Application">New advert create</a>
            </div>
            <div class="mt-3 text-center lead">
                No records found.
            </div>
        }
    }
</div>