@model AppUserLoginDto

@{
    Layout = "_Layout";
}

<div class="mt-4">
    <form asp-action="SignIn" asp-controller="Account" method="post" class="p-4 w-75 mx-auto">
        <div class="mb-3">
            <label>Kullanıcı Adınız</label>
            <input asp-for="UserName" class="form-control"/>
        </div>
        <div class="mb-3">
            <label>Şifreniz</label>
            <input type="password" asp-for="Password" class="form-control"/>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="RememberMe" class="form-check-input">
            <label class="form-check-label" for="flexCheckDefault">Beni Hatırla</label>
        </div>
        <div class="mb-3 text-end">
            <button type="submit" class="btn btn-primary">SignIn</button>
        </div>
        <div class="text-danger" asp-validation-summary="All">

        </div>
    </form>
</div>